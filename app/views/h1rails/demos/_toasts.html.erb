<div class="ui-box w-full">
  <div class="--top">
    <h3 class="ui-title --xl">
      Toasts
    </h3>
  </div>
  <a class="ui-button --solid --motion-forward" onclick="window.addToast({
    title: 'Success!',
    message: 'Your action was completed successfully',
    disappearing: true
    });">
    Trigger a toast
  </a>
  <div class="--bottom flex">
    <div></div>
    <a target="_blank" href="https://docs.h1rails.com/h1rails/toasts" class="ui-button --solid --motion-forward">
      Read The Docs 
      <%= inline_svg_tag("heroicons/arrow-top-right-on-square.svg") %>
    </a>
  </div>
</div>