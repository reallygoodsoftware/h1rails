<style>
  @layer base, active_admin, components, utilities;
</style>
<link rel="stylesheet" href="/stylesheets/active_admin.css<%= cache_buster %>">
<link rel="stylesheet" href="https://cdn.html-first.com/base-styles-0.0.12.css">

<meta name="viewport" content="width=device-width,initial-scale=1">
<%= csrf_meta_tags %>
<%= csp_meta_tag %>
<% # On page load or when changing themes, best to add inline in `head` to avoid FOUC %>
<%= javascript_tag nonce: true do %>
  if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
    document.documentElement.classList.add('dark')
  } else {
    document.documentElement.classList.remove('dark')
  }
<% end %>
<%= javascript_importmap_tags "active_admin", importmap: ActiveAdmin.importmap %>
